<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_prescription_image"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/ic_input_add" />

    <TextView
        android:id="@+id/tv_doctor_name"
        android:layout_width="0dp"
        android:layout_height="32dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="24dp"
        android:contentDescription="@string/sample_doctor"
        android:text="Doctor name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/iv_prescription_image"
        app:layout_constraintTop_toTopOf="@+id/iv_prescription_image" />

    <TextView
        android:id="@+id/tv_visited_on"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="@string/visited_on"
        app:layout_constraintStart_toEndOf="@+id/iv_prescription_image"
        app:layout_constraintTop_toBottomOf="@+id/tv_doctor_name" />

    <TextView
        android:id="@+id/tv_visited_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="31 Dec 2018"
        tools:text="31 Dec 2018"
        app:layout_constraintStart_toEndOf="@+id/tv_visited_on"
        app:layout_constraintTop_toTopOf="@+id/tv_visited_on" />
</android.support.constraint.ConstraintLayout>