<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/tv_vaccine_name"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Name"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Name" />

    <TextView
        android:id="@+id/tv_vaccine_name_val"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_marginStart="40dp"
        android:text="TextView"
        app:layout_constraintStart_toEndOf="@+id/tv_vaccine_name"
        app:layout_constraintTop_toTopOf="@+id/tv_vaccine_name"
        tools:text="Thyronom" />

    <TextView
        android:id="@+id/tv_vaccine_status"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_marginStart="204dp"
        android:text="Pending"
        app:layout_constraintBottom_toBottomOf="@+id/tv_vaccine_name"
        app:layout_constraintStart_toEndOf="@+id/tv_vaccine_name"
        app:layout_constraintTop_toTopOf="@+id/tv_vaccine_name"
        app:layout_constraintVertical_bias="0.0"
        tools:text="Status" />
</android.support.constraint.ConstraintLayout>